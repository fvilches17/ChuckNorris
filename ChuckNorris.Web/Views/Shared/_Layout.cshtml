<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    @* Meta *@
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    @* Favicon *@
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="96x96" href="/favicon-96x96.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">

    @* Style *@
    <link href="~/css/app.css" rel="stylesheet" />

    @* JS *@
    <script defer src="~/vendor/js/jquery-3.3.1.min.js"></script>
    <script defer src="~/js/app.js"></script>

    @* Title *@
    <title>ChuckNorris [@ViewData["Title"]]</title>
</head>
<body>
    <nav>
        @{
            const int iconHeight = 45;
        }

        @* Home *@
        <a id="icon-home" asp-controller="Facts" asp-action="Index" toolti>
            <img height="@iconHeight" src="~/images/icon-home.png" alt="Home" />
        </a>

        @* Favorites *@
        <a id="icon-favorites" asp-controller="Favorites" asp-action="Index">
            <img height="@iconHeight" src="~/images/icon-favorites.png" alt="Favorite Facts" />
        </a>

        @* Bio *@
        <a id="icon-chuck" asp-controller="Bio" asp-action="Index">
            <img height="@iconHeight" src="~/images/icon-chuck.png" alt="Bio" />
        </a>

        @* Contact *@
        <a id="icon-contact" asp-controller="Contact" asp-action="Index">
            <img height="@iconHeight" src="~/images/icon-contact.png" alt="Contact" />
        </a>
    </nav>

    <main>
        @RenderBody()
    </main>

    <div id="notification-icon" class="fixed-icon">
        <img src="~/images/icon-bell.png" alt="Push-ON" height="30" />
    </div>
</body>
</html>