@inject IConfiguration Configuration

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    @* Meta *@
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="msapplication-TileColor" content="#020b0f">

    @* Manifest Related *@
    <link rel="apple-touch-icon" sizes="180x180" href="~/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/favicon-16x16.png">
    <link rel="manifest" href="~/manifest.json">
    <link rel="mask-icon" href="~/safari-pinned-tab.svg" color="#142234">
    <meta name="msapplication-TileColor" content="#142234">
        
    @* Style *@
    <link href="~/css/app.min.css" rel="stylesheet" asp-append-version="false" />
    @RenderSection("Styles", required: false)

    @* JS *@
    <script asp-append-version="false" defer>
        const chuckNorrisAppSettings = {
            apiBaseUrl: '@Configuration["apiBaseUrl"]'
        };
    </script>
    <script src="~/vendor/js/jquery-3.3.1.min.js" defer></script>
    <script src="~/js/app.min.js" asp-append-version="false" defer></script>

    @RenderSection("Scripts", required: false)

    @* Title *@
    <title>Chuck Norris [@ViewData["Title"]]</title>
</head>
<body>
    <nav id="main-nav">
        @* Home *@
        <a id="icon-home" asp-controller="Facts" asp-action="Index">
            <img src="~/images/icon-home.png" alt="Home" />
        </a>

        @* Favorites *@
        <a id="icon-favorites" asp-controller="Favorites" asp-action="Index">
            <img src="~/images/icon-favorites.png" alt="Favorite Facts" />
        </a>

        @* Bio *@
        <a id="icon-chuck" asp-controller="Bio" asp-action="Index">
            <img src="~/images/icon-chuck.png" alt="Bio" />
        </a>

        @* Submissions *@
        <a id="icon-contact" asp-controller="Submissions" asp-action="Index">
            <img src="~/images/icon-lightbulb.png" alt="Suggestions" />
        </a>
    </nav>

    <main>
        @RenderBody()
    </main>

    @* Notifications Icon *@
    <div id="notification-icon" class="fixed-icon">
        <img src="~/images/icon-bell.png" alt="Push-ON" asp-append-version="false" />
    </div>

    @* Offline Icon *@
    <div id="offline-icon" class="">
        <img src="~/images/icon-offline.png" alt="Offline" asp-append-version="false" />
    </div>
</body>
</html>