@model List<Submission>

@{
    ViewBag.Title = "Chuck Norris Facts - Submissions";
    Layout = "_Layout";
}

<h2>@ViewBag</h2>

<table class="table table-hover">
    <tr>
        <th>Id</th>
        <th>Fact</th>
        <th><span class="glyphicon glyphicon-check"></span></th>
    </tr>

    @for (var i = 0; i < Model.Count(); i++)
    {
        <tr>
            <td>@Model[i].Id</td>
            <td>@Model[i].FactDescription</td>
            <td><a class="glyphicon glyphicon-th-large glyphicon-check " asp-action="Approve" asp-route-Id="@Model[i].Id"></a></td>
        </tr>
    }

</table>