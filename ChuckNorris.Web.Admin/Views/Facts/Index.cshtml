@model IEnumerable<Fact>

@{
    ViewBag.Title = "Chuck Norris Facts";
    Layout = "_Layout";
}

<h2>Chuck Norris Facts</h2>


<table class="table table-hover">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Id)</th>
        <th>@Html.DisplayNameFor(model => model.Description)</th>
        <th><span class="glyphicon glyphicon-minus"></span></th>
    </tr>
    @foreach (var fact in Model)
    {
        <tr>
            <td>@fact.Id</td>
            <td>@fact.Description</td>
            <td><a class="glyphicon glyphicon-trash" asp-action="Remove" asp-route-factId="@fact.Id"></a></td>
            
        </tr>
    }
</table>

<a asp-action="Add" class="btn btn-primary">Add</a>